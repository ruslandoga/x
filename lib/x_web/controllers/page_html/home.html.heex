<.link
  href={~p"/export"}
  class="text-stone-900 border-2 rounded p-2 hover:border-green-500 transition"
>
  Export
</.link>

<.simple_form :let={f} for={%{}} action={~p"/import"} multipart>
  <.input field={f[:file]} type="file" label="Import file" accept=".plausible" required />
  <:actions>
    <.button>Import</.button>
  </:actions>
</.simple_form>
